{
  "name": "surfnet/yubikey-api-client",
  "description": "A Yubikey OTP validation service client",
  "keywords": [
    "yubikey",
    "yubico",
    "surfnet"
  ],
  "license": "Apache-2.0",
  "autoload": {
    "psr-4": {
      "Surfnet\\YubikeyApiClient\\": "src",
      "Surfnet\\YubikeyApiClient\\Tests\\": "tests/unit",
      "Surfnet\\YubikeyApiClient\\IntegrationTests\\": "tests/integration"
    }
  },
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.5"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpmd/phpmd": "^2.15",
    "phpunit/phpunit": "^9.6",
    "sebastian/phpcpd": "^6.0",
    "squizlabs/php_codesniffer": "^3.8"
  },
  "config": {
    "audit": {
      "abandoned": "report"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@security-tests"
    ],
    "phpunit": "./vendor/bin/phpunit",
    "security-tests": [
      "composer audit"
    ]
  }
}
